doctype html
html
    head
        title #{common.title}
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')

        //link(rel='icon', href='favicon.ico')
        //link(rel='shortcut icon', href='favicon.ico')
        link(rel='stylesheet', href='/static/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/static/font-awesome/css/font-awesome.min.css')

        link(rel='stylesheet', href='/static/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css')
        link(rel='stylesheet', href='/static/datatables-responsive/css/responsive.bootstrap.css')
        link(rel='stylesheet', href='/static/datatables-fixedheader/css/fixedHeader.dataTables.css')
        link(rel='stylesheet', href='/static/fancybox/source/jquery.fancybox.css')
        link(rel='stylesheet', href='/css/viewer.css')

        script(type='text/javascript' src='/static/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='/static/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript' src='/static/fancybox/source/jquery.fancybox.pack.js')
    body
        div(id='wrapper')
            nav(class='navbar navbar-default navbar-fixed-top')
                div(class='navbar-header')
                    button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
                        span(class='sr-only') Toggle navigation
                        span(class='icon-bar')
                        span(class='icon-bar')
                        span(class='icon-bar')
                    a(class='navbar-brand') #{common.title}
                div(class='collapse navbar-collapse')
                    form(class='navbar-form navbar-left', role='search')
                        div(class='form-group')
                            input(type='text', id='filter-search-box', class='form-control input-large', placeholder='Search', style='min-width: 240px;')
                    ul(class='nav navbar-nav navbar-right')
                        li
                            a #{common.file}: #{meta.filename}
                        li
                            a #{common.line}: #{meta.line}
            div(id='table-wrapper')
                table(class='table table-striped table-bordered table-hover table-condensed', id='log-tl-table-viewer')
                    thead
                        tr
                            th #
                            th Time
                            th Tag
                            th Message
                    tbody
                        each line, index in lines
                            tr
                                td #{index + 1}
                                td #{line.time}
                                td #{line.tag}
                                if line.attach
                                    td #{line.msg} &nbsp;
                                        a(href=line.attach, class='fancybox')
                                            i(class='fa fa-image fa-f')
                                else
                                    td #{line.msg}
        script(type='text/javascript' src='/static/datatables/media/js/jquery.dataTables.min.js')
        script(type='text/javascript' src='/static/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js')
        script(type='text/javascript' src='/static/datatables-fixedheader/js/dataTables.fixedHeader.js')
        script
            include ../assets/js/logful.viewer.js
